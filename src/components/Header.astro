---
const baseUrl = import.meta.env.BASE_URL
---

<header class="bg-[#644b36] h-[15vh] max-sm:h-[10vh] flex py-3 px-8 gap-6 max-sm:px-4 max-sm:gap-4">
    <img class="h-auto aspect-square transition-all duration-[1s]" src=`${baseUrl}/bar-icon.svg` alt="Logo Muebles WF"/>
    <a class="text-white self-center text-5xl max-sm:text-3xl" href={baseUrl}>Muebles WF</a>
</header>

<style>
    img:hover{
        transform: rotateY(360deg);
    }
</style>