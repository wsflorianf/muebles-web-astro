---
import type { ProductTypes } from '@/types/data'

interface Props {
  product: ProductTypes
  path: string
}

const { product, path } = Astro.props

const url = Astro.url.pathname.split('/')[2]
const baseUrl = import.meta.env.BASE_URL
---

<div class="h-[85vh] p-10 flex gap-[30px]">
  <div class="flex flex-col w-full h-full flex-[5] gap-2">
  
  <div
    id='default-carousel'
    class='relative w-full h-full shadow-md border border-gray-200 rounded-xl'
    data-carousel='static'
  >
    <!-- Carousel wrapper -->
    <div class='relative h-full overflow-hidden rounded-lg'>
      {
        product.images.map((image, index) => {
          return (
            <div
              class='image-conatiner hidden duration-700 ease-in-out bg-white hover: cursor-zoom-in'
              data-carousel-item
            >
              <img
                src={baseUrl + path + image}
                transition:name={index===0?'product-image-'+product.id:''}
                class='absolute block -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 h-full w-auto'
                alt='...'
              />
            </div>
          )
        })
      }
    </div>
    <!-- Slider indicators -->
    <div
      class='absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse'
    >
      {
        product.images.map((image, index) => {
          return (
            <button
              type='button'
              class='w-3 h-3 rounded-full'
              aria-current='true'
              aria-label={'Imagen ' + (index + 1)}
              data-carousel-slide-to={index}
            />
          )
        })
      }
    </div>
    <!-- Slider controls -->
    <button
      type='button'
      class='absolute hidden -translate-x-1/2 -translate-y-1/2 top-1/2 left-10 z-30 px-4 cursor-pointer group focus:outline-none md:inline-block'
      data-carousel-prev
    >
      <span
        class='inline-flex items-center justify-center w-10 h-10 rounded-full border border-gray-100 shadow-lg bg-gray-700/60 group-hover:bg-gray-700/90 group-focus:ring-4 group-focus:ring-gray-700/70 group-focus:outline-none'
      >
        <svg
          class='w-4 h-4 text-white rtl:rotate-180'
          aria-hidden='true'
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 6 10'
        >
          <path
            stroke='currentColor'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M5 1 1 5l4 4'></path>
        </svg>
        <span class='sr-only'>Previous</span>
      </span>
    </button>
    <button
      type='button'
      class='absolute hidden translate-x-1/2 -translate-y-1/2 top-1/2 right-10 z-30 items-center justify-center px-4 cursor-pointer group focus:outline-none md:inline-block'
      data-carousel-next
    >
      <span
        class='inline-flex items-center justify-center w-10 h-10 rounded-full border border-gray-100 shadow-lg bg-gray-700/60 group-hover:bg-gray-700/90 group-focus:ring-4 group-focus:ring-gray-700/70 group-focus:outline-none'
      >
        <svg
          class='w-4 h-4 text-white rtl:rotate-180'
          aria-hidden='true'
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 6 10'
        >
          <path
            stroke='currentColor'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='m1 9 4-4-4-4'></path>
        </svg>
        <span class='sr-only'>Next</span>
      </span>
    </button>
  </div>
</div>

  <div class="flex flex-[3] px-10 flex-col gap-4">
    <h3 class="font-bold text-4xl text-center">{product.name}</h3>
    <p class="text-xl text-justify">{product.description}</p>
  </div>
</div>


<script>

  const imageContainers = document.querySelectorAll('div.image-conatiner')

  imageContainers.forEach(container=>{ 
    const image = container.querySelector('img')
    if(image){
    (container as HTMLElement).addEventListener('mousemove',(e)=>{
      const rects = container.getBoundingClientRect()


      const x = (Math.ceil((e.clientX-rects.x)*100/rects.width))+16.5
      const y = (Math.ceil((e.clientY-rects.y)*100/rects.height))+16.5
      
      console.log(x, y)

      
      image.style.transform = 'scale(4)'
      image.style.transformOrigin = `${x}% ${y}%`     
    })
  }
    
  })

  imageContainers.forEach(container=>{ 
    const image = container.querySelector('img')
    if(image){
    (container as HTMLElement).addEventListener('mouseleave',(e)=>{
      image.style.transform = ''
      image.style.transformOrigin = ''
    })
  }
    
  })

</script>