---
import '@fontsource/roboto'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import WhatsappButton from '@/components/WhatsappButton.astro'
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string,
  noTransitions?: boolean
}

const { title, noTransitions } = Astro.props

const baseUrl = import.meta.env.BASE_URL
---

<html lang='en'>
  <>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href={baseUrl+'/icon.svg'} />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    {noTransitions?<></>:<ViewTransitions/>}
  </head>
  <body>
    <Header />
	<slot/>
	<Footer/>
  <WhatsappButton/>
  </body>
  <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
</html>

<style is:global>
	:root{
		font-family: 'Roboto', Helvetica, sans-serif;
	}
</style>
